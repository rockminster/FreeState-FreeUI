{
  "name": "freeui",
  "private": true,
  "description": "A tokens-first design system for FreeState apps",
  "keywords": [
    "design-system",
    "react",
    "tokens",
    "accessibility"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rockminster/FreeState-FreeUI.git"
  },
  "license": "MIT",
  "author": "rockminster",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:prettier": "prettier --check .",
    "format": "prettier --write .",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "playwright": "^1.55.1",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
