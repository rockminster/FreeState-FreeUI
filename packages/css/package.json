{
  "name": "@rockminster/css",
  "version": "0.0.1",
  "description": "CSS utilities for FreeUI design system",
  "main": "dist/index.css",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "pnpm run build:tokens && postcss src/index.css -o dist/index.css",
    "build:tokens": "pnpm --filter @rockminster/tokens build:tokens",
    "dev": "pnpm run build:tokens && postcss src/index.css -o dist/index.css --watch",
    "lint": "eslint *.js --ignore-pattern dist",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "css",
    "utilities",
    "design-system"
  ],
  "author": "rockminster",
  "license": "MIT",
  "dependencies": {
    "@rockminster/tokens": "workspace:*"
  },
  "devDependencies": {
    "@rockminster/eslint-config": "workspace:*",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0"
  }
}
