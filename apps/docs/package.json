{
  "name": "@rockminster/docs",
  "version": "0.0.1",
  "private": true,
  "description": "Storybook documentation for FreeUI design system",
  "scripts": {
    "build": "pnpm run build:deps && storybook build",
    "build:deps": "pnpm --filter @rockminster/tokens build && pnpm --filter @rockminster/css build && pnpm --filter @rockminster/react build",
    "dev": "pnpm run build:deps && storybook dev -p 6006",
    "test": "pnpm run test:smoke",
    "test:smoke": "pnpm run build && echo \"Storybook build successful - basic smoke test passed\"",
    "test:ci": "pnpm run test:smoke",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf storybook-static"
  },
  "dependencies": {
    "@rockminster/css": "workspace:*",
    "@rockminster/react": "workspace:*",
    "@rockminster/tokens": "workspace:*",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@rockminster/eslint-config": "workspace:*",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test-runner": "0.19.1",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-playwright": "^2.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.1",
    "playwright": "^1.55.1",
    "storybook": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.1"
  }
}
